@model JuicyBurger.Web.InputModels.Ingredients.IngredientsCreateInputModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container shadow mt-1 p-5">
        <h2 class="bg-dark text-white font-weight-bold text-center p-2 rounded">Create Ingredient</h2>
        <hr />
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            Enter <strong>Carbohydrates, Proteins & Fat</strong> for <strong>100g,</strong> it will be calculated automatically according to <strong>Weight.</strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <form method="post" asp-action="/Administration/Ingregiens/Create">
            <div asp-validation-summary="ModelOnly"></div>
            <div id="name-and-weight-holder" class="d-flex justify-content-between">
                <div class="form-group mx-auto w-25">
                    <div class="d-flex justify-content-center">
                        <label asp-for="Name" class="text-dark font-weight-bold">Name</label>
                    </div>
                    <input asp-for="Name" type="text" class="form-control" id="name" placeholder="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mx-auto w-25">
                    <div class="d-flex justify-content-center">
                        <label asp-for="Weight" class="text-dark font-weight-bold">Weight</label>
                    </div>
                    <input asp-for="Weight" type="number" class="form-control" id="weight" placeholder="Weight">
                    <span asp-validation-for="Weight" class="text-danger"></span>
                </div>
            </div>
            <div id="macronutrients" class="d-flex justify-content-between">
                <div class="form-group mx-auto w-25">
                    <div class="d-flex justify-content-center">
                        <label asp-for="Carbohydrates" class="text-dark font-weight-bold">Carbohydrates</label>
                    </div>
                    <input asp-for="Carbohydrates" type="number" class="form-control" id="carbohydrates" placeholder="Carbohydrates">
                    <span asp-validation-for="Carbohydrates" class="text-danger"></span>
                </div>
                <div class="form-group mx-auto w-25">
                    <div class="d-flex justify-content-center">
                        <label asp-for="Proteins" class="text-dark font-weight-bold">Proteins</label>
                    </div>
                    <input asp-for="Proteins" type="number" class="form-control" id="proteins" placeholder="Proteins">
                    <span asp-validation-for="Proteins" class="text-danger"></span>
                </div>
                <div class="form-group mx-auto w-25">
                    <div class="d-flex justify-content-center">
                        <label asp-for="Fat" class="text-dark font-weight-bold">Fat</label>
                    </div>
                    <input asp-for="Fat" type="number" class="form-control" id="Fat" placeholder="Fat">
                    <span asp-validation-for="Fat" class="text-danger"></span>
                </div>
            </div>
            <hr />
            <div class="d-flex justify-content-center">
                <button class="btn btn-dark font-weight-bold mb-3">Create</button>
            </div>
        </form>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
