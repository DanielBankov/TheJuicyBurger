@model JuicyBurger.Web.InputModels.Products.ProductTypesCreateInputModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container shadow mt-5">
        <h2 class="bg-dark text-white font-weight-bold text-center p-2 rounded">Create Product Type</h2>

        <hr />
        <div class="row d-flex justify-content-center text-center">
            <div class="col-md-4">
                <form method="post" asp-action="/Administration/Products/Type/Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label font-weight-bold">Name</label>
                        <input asp-for="Name" class="form-control" type="text" placeholder="Type Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-dark font-weight-bold" />
                    </div>
                </form>
            </div>
        </div>
    </div>
